<div class="col-md-6 col-md-offset-3 panel panel-default form-style">
  <div class="panel-body">
    <h2>Create a School</h2>

    <%= simple_form_for @account do |f| %>

      <%= f.fields_for :owner do |o| %>

        <%= o.input :name, class: 'form-control', data: { toggle: 'tooltip', trigger: 'hover', placement: 'left' }, title: "Enter the first and last name of the administrator you'd like to have." %>
        <%= o.input :email, data: { toggle: 'tooltip', placement: 'top' }, title: "Enter the email you'd like to use for the administrator for your school" %>
        <%= o.input :password %>
        <%= o.input :password_confirmation %>

      <% end %>
    

      <%= f.input :subdomain do %>
        <div class="input-group">
          <%= f.input_field :subdomain, class: 'form-control', data: { toggle: 'tooltip', placement: 'left' }, title: "Enter your school name to be the subdomain" %>
          <span class="input-group-addon">.getsensei.net</span>
        </div>
      <% end %>

      <%= f.button :submit, class: 'btn-primary' %>
      
    <% end %>
  </div>
</div>