<%= stylesheet_link_tag 'accounts' %>


<div class="jumbotron jumbotron-front-page" style="background-image: url('<%= image_path(current_account.school_background_attachments) %>');">
  <div class="container front-page">
    <%= image_tag current_account.school_logo_attachments, class: "school-logo school-logo-header" %>
  </div>
</div>

<!-- <div class="school-background-container">
<%# image_tag current_account.school_logo_attachments, class: "school-background" %>
</div> -->

<div class="container">

  <div class="row">

    <div id="home-body">
      <span class="subdomain-title"><h1>Welcome to <%= current_account.subdomain.capitalize %></h1></span>

      <div id="about">
        <h3> About the school </h3>
        <p class="lead">
          <%= current_account.description %>
        </p>
      </div>

    </div>
  </div>

  <div class="row">
    <h3>The courses</h3>
    <% current_account.projects.each do |project| %>
    <div class="col-md-6">
      <div class="project_box panel panel-default">
      <% if user_signed_in? %>
        <%= link_to project.name, project_path(project) %>
        <% else %>
        <%= project.name %>
        <% end %>
        <%= project.subtitle %>

        <% if current_account.projects.count == 0 %>
          <%= link_to 'New Course', new_project_path, class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
    <% end %>
  </div>


